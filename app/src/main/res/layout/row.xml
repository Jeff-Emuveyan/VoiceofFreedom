<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/black"
    app:cardCornerRadius="5dp"

    app:cardElevation="0dp"
    app:contentPadding="0dp"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:paddingBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rTitleTv2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@android:color/black"
                android:text="Title"
                android:paddingBottom="5dp"/>

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/ep_video_view"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:backgroundTint="@android:color/white"
                app:resize_mode="fill"
                android:paddingBottom="5dp"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textFieldUrl"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/black"
            android:text="Video Url..."
            android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textFieldDuration"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@android:color/black"
                android:text="Video Duration..."
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textFieldThumbnail"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@android:color/black"
                android:text="Thumbnail Url...
"
                android:paddingBottom="5dp"/>


        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>